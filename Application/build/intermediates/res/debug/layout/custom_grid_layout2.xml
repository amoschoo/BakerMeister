<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="150dp">


    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/imagerecipe"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:src="@drawable/cookie"
         />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagerecipe"
        android:gravity="center"
        android:id="@+id/namerecipe"
        android:text="Name"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:textSize="15dp"
        android:textColor="#000000"
        />


</RelativeLayout><!-- From: file:/Users/Amos/Desktop/Myapp/BakerMeister/Application/src/main/res/layout/custom_grid_layout2.xml -->