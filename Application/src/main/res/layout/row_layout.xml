<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <View
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/cookie"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/recipename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picture"
        android:text="Name of Recipe"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/categoryword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipename"
        android:layout_toRightOf="@+id/picture"
        android:text="Category: "
        android:textColor="#000000"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/skillevelword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryword"
        android:layout_toRightOf="@+id/picture"
        android:text="Skill Level: "
        android:textColor="#000000"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipename"
        android:layout_toRightOf="@+id/categoryword"
        android:text="Cookies"
        android:textColor="#8695b4"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryword"
        android:layout_toRightOf="@+id/skillevelword"
        android:text="1"
        android:textColor="#8695b4"/>
